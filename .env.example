# ==================================================
# Red Pen (Красная Ручка) - Environment Configuration
# ==================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# --------------------------------------------------
# General
# --------------------------------------------------
NODE_ENV=production

# --------------------------------------------------
# Telegram Bot
# --------------------------------------------------
TG_TOKEN=your_telegram_bot_token_here

# Whitelist (comma-separated, leave empty to allow everyone)
# You can use either IDs or usernames or both
TG_WHITELIST_IDS=123456789,987654321
TG_WHITELIST_USERNAMES=username1,username2

# --------------------------------------------------
# LLM Configuration (OpenAI-compatible API)
# --------------------------------------------------
LLM_BASE_URL=http://your-llm-server:8000/v1
LLM_MODEL=your-model-name
LLM_API_KEY=

# --------------------------------------------------
# Search for fact-checking
# --------------------------------------------------
# Providers: searxng (self-hosted, unlimited) -> brave -> exa-mcp
# SearXNG runs in Docker, no API key needed
SEARCH_PROVIDER=searxng

# Brave Search API (optional fallback, 2000 free queries/month)
# Get your key at: https://brave.com/search/api/
BRAVE_SEARCH_API_KEY=

# --------------------------------------------------
# Worker Service
# --------------------------------------------------
WORKER_DEBUG=false
MAX_FILE_SIZE_MB=10

# --------------------------------------------------
# Ports (for docker-compose)
# --------------------------------------------------
CORE_PORT=3000
WORKER_PORT=8000
REDIS_PORT=6379
